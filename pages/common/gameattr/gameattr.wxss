/* pages/common/gameattr/gameattr.wxss */

.tips{
  background: #FF9402;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
}
.info-tips{
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #CCCCCC;
  letter-spacing: 0.04px;
  text-align: right;
  display: block;
  position: absolute;
  top:38rpx;

}
.input-style{
  height: 100rpx;
}
.goods-title{
  margin-bottom:30rpx; 
}
.flex {
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
}
.flexarea{
  min-height: 100rpx;
  margin-top: 20rpx;
  display: flex;
}
.left {
  width: 300rpx;
  color: #333;
  font-size: 30rpx;
  position: relative;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.right {
  flex: 1;
  color: #999;
  font-size: 28rpx;
  text-align: right;
}
input {
  border: none;
  height: auto;
}
.arrow {
  position: relative;
  padding-right: 30rpx;
}
.noarrow{
  position: relative;
}
.arrow>image {
  content: "";
  position: absolute;
  width: 14rpx;
  height: 28rpx;
  top: 36rpx;
  right: 0;
  background-size: contain;
  z-index: 10;
}

.info-title {
  padding-left: 24rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.info-title-title {
  font-size: 14px;
  color: #999999;
  margin-right: 20rpx;
}
.info-title-tips {
  font-size: 12px;
  color: #999999;
}
.info {
  background: #fff;
  padding: 0 24rpx;
}
.info > .flex {
  /* border-bottom: 1px solid #f1f1f1; */
}



.picker-choose{
  margin-top: 28rpx;  
}
.title-block{
  width: 3px;
  height: 88rpx;
  background: #FF3434;
  margin-right: 20rpx;
}
.title-info{
  font-size: 16px;
  color: #333333;
  letter-spacing: 0.06px;
  background: #F2F2F2;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
}

.checkboxvalue{
  text-overflow: ellipsis;
}