/* pages/center/center.wxss */

.center-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #f5f5f5;
}

/* 用户信息 */
.user {
    height: 400rpx;
    background: #fff;
    padding-top: 30rpx;
    text-align: center;
    background: repeating-linear-gradient(-45deg,#ff3434, #ff3f3f 5%);
    position: relative;
}

.user-pic {
    width: 152rpx;
    height: 152rpx;
    border-radius: 50%;
    margin-bottom: 20rpx;
    border:12rpx solid #ff5151;
    
}

.user-name {
    height: 50rpx;
    line-height: 50rpx;
    font-size: 18px;
    color: #666;
    text-align: center;
}

.user-money {
    width:90%;
    height:120rpx;
    padding:12rpx 0 ;
    display: flex;
    background:#fff;
    position: absolute;
    bottom:0;
    left:5%;
    box-shadow: 0 2px 4px 0 rgba(229,212,212,0.50);
    border-radius: 4px;
    z-index:10;
}

.user::before,.user::after {
    content:'';
    width:100rpx;
    height:100rpx;
    transform:rotate(30deg);
    transform-origin: 0 0 ;
    background:#fff;
    position: absolute;
    bottom:-20rpx;
    z-index:1; 
}

.user::before {
    left:0;
}

.user::after {
    transform:rotate(-30deg);
    transform-origin: right top ;
    bottom:-20rpx;
    right:0; 
}

.user-money-item {
    width:50%;
    text-align: center;
    padding-top: 8rpx;
    color: #ff4444;
}

.user-money-item:nth-of-type(1) {
    border-right:1rpx solid #ededed;
}

.user-money-icon {
    font-size: 10px;
}

.user-money-count {
    margin-bottom: 4rpx;
    font-size: 18px;
     
}

.user-money-text {
    color:#2A2A2A;
    font-size: 14px;
}

.user-money-text-img {
    width:18rpx;
    height:24rpx;
    vertical-align: middle;
}

/* 导航栏 */
.nav {
    display: flex;
    background:#fff;
    padding-top: 60rpx;
    padding-bottom: 50rpx;
    margin-bottom: 20rpx;
}

.nav-item {
    width:25%;
    text-align: center;
}

.nav-item-pic {
    width:40rpx;
    height:48rpx;
    margin-bottom: 12rpx;
}

.nav-item-text {
    font-size: 12px;
    color:#666;
    line-height: 34rpx;
}

.button {
    background: #fff;
    display: block;
    -webkit-tap-highlight-color: transparent;
    border-radius: 0;
    line-height: 40rpx;
}

/* 列表 */
.info {
    background: #fff;
}

.info-item {
    height: 100rpx;
    line-height: 100rpx;
    position: relative;
    padding:0 30rpx;
    display:flex;
}

.info-item::before {
    content: "";
    position: absolute;
    top: 32rpx;
    left: -66rpx;
    width: 36rpx;
    height: 36rpx;
}

.info-item::after {
    content: "";
    position: absolute;
    top: 36rpx;
    right: 30rpx;
    width: 14rpx;
    height: 28rpx;
    background-color: red;
    background: url(data:image/png;base64,) no-repeat;
    background-size: contain;
}

.info-item:nth-of-type(1) {
    border-bottom: 4rpx solid #f1f1f1;
}

.info-item-pic {
    width:34rpx;
    height:34rpx;
    margin-right: 12rpx;
    margin-top: 32rpx;
}

.info-item-text {
    font-size: #333;
    font-size: 14px;
}



.button-hover {
    color:#333;
}

.button::after {
    border: none;
    outline: none;
}