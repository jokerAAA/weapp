/* pages/center/center.wxss */

.center-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #f5f5f5;
}

.user {
    height: 240rpx;
    background: #fff;
    padding-top: 30rpx;
    text-align: center;
}

.user-pic {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    margin-bottom: 20rpx;
}

.user-name {
    height: 50rpx;
    line-height: 50rpx;
    font-size: 18px;
    color: #666;
    text-align: center;
}

.info {
    background: #fff;
    padding: 0 40rpx 0 100rpx;
}

.info-item {
    height: 100rpx;
    line-height: 100rpx;
    position: relative;
}

.info-item::before {
    content: "";
    position: absolute;
    top: 32rpx;
    left: -66rpx;
    width: 36rpx;
    height: 36rpx;
}

.info-item::after {
    content: "";
    position: absolute;
    top: 36rpx;
    right: 0;
    width: 14rpx;
    height: 28rpx;
    background-color: red;
    background: url(data:image/png;base64,) no-repeat;
    background-size: contain;
}

.info-item:nth-of-type(1) {
    border-bottom: 4rpx solid #f1f1f1;
}

.info-item:nth-of-type(1)::before {
    background: url(data:image/png;base64,) no-repeat;
    background-size: contain;
}

.info-item:nth-of-type(2)::before {
    background: url(data:image/png;base64,) no-repeat;
    background-size: contain;
}

.info-item-text {
    font-size: #333;
    font-size: 14px;
}

.button {
    background: #fff;
    display: block;
    line-height: 100rpx;
    text-align: left;
    -webkit-tap-highlight-color: transparent;
    border-radius: 0;
}

.button-hover {
    color:#333;
}

.button::after {
    border: none;
    outline: none;
}