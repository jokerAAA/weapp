page {
    background-color: #f5f5f5;
    padding-bottom: 100rpx;
}

.orderdetail-container {
    font-size: 15px;
    color: #999;
}

/* 交易状态 */

.state {
    background: #515151;
    padding: 40rpx 24rpx;
}

.state-text {
    font-size: 18px;
}

/* 商品信息 */

.goods {
    display: flex;
    background: #fff;
    padding: 24rpx;
    margin-bottom: 20rpx;
}

.goods-left {
    margin-right: 20rpx;
}

.goods-left-pic {
    width: 120rpx;
    height: 120rpx;
}

.goods-right {
    flex: 1;
}

.goods-right-title {
    line-height: 40rpx;
    color: #333;
    margin-bottom: 32rpx;
}

.goods-right-info {
    font-size: 12px;
    line-height: 17px;
}

/* 温馨提示 */

.tips {
    padding: 16rpx 24rpx 30rpx;
}

/* 订单信息 */

.order {
    background: #fff;
}

.order-item {
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
    padding:0 24rpx;
}

.order-item-left {
    width: 200rpx;
}

.order-item-right {
    color: #333;
    flex: 1;
    text-align: right;
}

.order-price {
    padding:0 24rpx;
    border-top: 1rpx solid #f2f3f6;
    text-align: right;
    height: 80rpx;
    line-height: 80rpx;
}

/* 底部按钮 */

.btns {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    background: #fff;
    display: flex;
    justify-content: flex-end;
    flex-wrap: nowrap;
    padding-top: 30rpx;
}

.btns-item {
    background: #fff;
    padding: 4rpx 24rpx;
    height: 40rpx;
    line-height: 32rpx;
    border-radius: 8rpx;
    border: 1prx solid #999;
    color: #999;
    margin-right: 20rpx;
    font-size: 12px;
    text-align: center;
    border: 1px solid #ccc;
}

.btns-item::after {
    border: none;
    outline: none;
}