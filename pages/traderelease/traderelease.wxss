.container {
  padding-bottom:10rpx;
  -webkit-overflow-scrolling: touch;
  background: #fff;
}
.tips{
  background: #FF9402;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
}
.info-tips{
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #CCCCCC;
  letter-spacing: 0.04px;
  text-align: right;
  display: block;
  position: absolute;
  top:38rpx;

}
.input-style{
  height: 100rpx;
}
.goods-title{
  margin-bottom:30rpx; 
}
.flex {
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
}
.flexpic{
  min-height: 100rpx;
  margin-top: 20rpx;
}
.left {
  width: 200rpx;
  color: #333;
  font-size: 30rpx;
  position: relative;
}
.right {
  flex: 1;
  color: #999;
  font-size: 28rpx;
  text-align: right;
}
input {
  border: none;
  height: auto;
}
.arrow {
  position: relative;
  padding-right: 30rpx;
}
.noarrow{
  position: relative;
}
.arrow>image {
  content: "";
  position: absolute;
  width: 14rpx;
  height: 28rpx;
  top: 36rpx;
  right: 0;
  background-size: contain;
  z-index: 10;
}

.info-title {
  padding-left: 24rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.info-title-title {
  font-size: 14px;
  color: #999999;
  margin-right: 20rpx;
}
.info-title-tips {
  font-size: 12px;
  color: #999999;
}
.info {
  background: #fff;
  padding: 0 24rpx;
}
.info > .flex {
  /* border-bottom: 1px solid #f1f1f1; */
}


.submit {
  margin: 60rpx auto 100rpx;
  width: 700rpx;
  height: 88rpx;
  line-height: 88rpx;
  
  border-radius: 4px;
  text-align: center;
}
.submit button{
  background: #FF3434;
  color: #fff;
}
.picker-choose{
  margin-top: 28rpx;  
}
.title-block{
  width: 3px;
  height: 88rpx;
  background: #FF3434;
  margin-right: 20rpx;
}
.title-info{
  font-size: 16px;
  color: #333333;
  letter-spacing: 0.06px;
  background: #F2F2F2;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
}
.title-bx{
  background: #F9F4EC;
  height: 74rpx;
  line-height: 74rpx;
  font-size: 14px;
  color: #FF9402;
  letter-spacing: 0.05px;
  display: flex;
}
.title-bx image{
  width: 44rpx;
  height: 44rpx;
  margin:0 28rpx;
  margin:14rpx 18rpx;
}
.picture-left{
  width: 135rpx;
}
.picture-tips{
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #CCCCCC;
  letter-spacing: 0.04px;
}



.addpic{
  width: 200rpx;
  height: 128rpx;
  margin: 20rpx 20rpx 20rpx 0;
  background: #F7F7F7;
  border-radius: 4px;
  position: relative;
}

.pic-box{
  display: flex;
  flex-wrap: wrap;
}

.pic-box image{
  width: 200rpx;
  height: 128rpx;
  border-radius: 4px;
  margin: 20rpx 20rpx 20rpx 0;
}
.addpic image{
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
}
.pic-new{
  position: relative;
}
.deletepic{
  /* position: absolute; */
  /* height: 50rpx; */
  background: rgba(0, 0, 0, 0.5)
}
.deletepic image{
  width: 36rpx;
  height: 40rpx;
  margin: auto;
  position:absolute;
  right:30rpx;
  top:30rpx;
}