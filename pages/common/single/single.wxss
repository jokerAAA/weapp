/* pages/common/single/single.wxss */
.flex {
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
}
.left {
  width: 200rpx;
  color: #333;
  font-size: 30rpx;
}
.right {
  flex: 1;
  color: #999;
  font-size: 28rpx;
  text-align: right;
}
input {
  border: none;
  height: auto;
}
.arrow {
  position: relative;
  padding-right: 30rpx;
}
.arrow>image {
  content: "";
  position: absolute;
  width: 14rpx;
  height: 28rpx;
  top: 36rpx;
  right: 0;
  background-size: contain;
  z-index: 10;
}

.info-title {
  padding-left: 24rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.info-title-title {
  font-size: 14px;
  color: #999999;
  margin-right: 20rpx;
}
.info-title-tips {
  font-size: 12px;
  color: #999999;
}
.info {
  background: #fff;
  padding: 0 24rpx;
}
.info > .flex {
  /* border-bottom: 1px solid #f1f1f1; */
}


.submit {
  margin: 60rpx auto 100rpx;
  width: 700rpx;
  height: 88rpx;
  line-height: 88rpx;
  
  border-radius: 2px;
  text-align: center;
}
.submit button{
  background: #FF3434;
  color: #fff;
}
.picker-choose{
  margin-top: 28rpx;  
}
