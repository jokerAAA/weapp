/* pages/paymentorder/paymentorder.wxss */

.pay-container {
    background:#f7f7f7;
    position: absolute;
    top:0;
    left:0;
    width:100%;
    height:100%;
}

.flex {
    display: flex;
}

.flex-left {
    width:142rpx;
    color:#999;
    font-size: 15px;
    margin-right:24rpx;
}

.flex-right {
    flex:1;
    color:#333;
    font-size: 15px;
    text-align: right;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.money {
    height:100rpx;
    line-height: 100rpx;
    background:#fff;
    padding:0 24rpx;
    margin-bottom:20rpx;
}   

.money-item {

}

.info {
    background:#fff;
    padding: 0 24rpx;
    margin-bottom:60rpx;
}

.info-item {
    height:84rpx;
    line-height: 84rpx;
}

.btn {
    background:#09BB07;
    width:700rpx;
    height:88rpx;
    line-height: 88rpx;
    text-align: center;
    border-radius: 8rpx;
    color:#fff;
    margin:0 auto;
}