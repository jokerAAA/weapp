/* pages/goodslist/goodslist.wxss */

@import "/lib/animate.wxss";

.container {
   
    background:#fff;
    padding-top:80rpx;
}

.mask {
   
    top:80rpx;
    
    height:calc(100% - 80rpx);
}
/* 菜单栏 */
.menu {
    position: fixed;
    top:0;
    left:0;
    z-index:10;
    background:#fff;
    width:100%;
    height:80rpx;
    line-height: 80rpx;
    display: flex;
    border-bottom:1rpx solid #f2f3f6;
}

.menu-item {
    width:25%;
    flex:1;
    text-align:center;
    color:#333;
}

.menu-item-text {
    font-size: 14px;
    vertical-align: middle;
    margin-right:5rpx;
}

.menu-item-img {
    width:12rpx;
    height:8rpx;
    vertical-align: middle;
}

.menu-item-choose {
    width:22rpx;
    height:22rpx;
    vertical-align: middle;
}

/* 服务器下拉 */
.server {
    background:#fff;
    animation:slideDown 0.2s linear;
    display: flex;
    height:720rpx;
}

.server-left {
    width:240rpx;
    
}

.server-left-area {
    display: block;
    background:#f7f7f7;
    text-indent: 36rpx;    
    height:72rpx;
    line-height: 72rpx;
    border-bottom:1rpx solid #fff;
    color:#666;
    font-size: 13px;
}

.active-area {
    background:#fff;
}

.server-right {
    flex:1;
    padding:20rpx 24rpx 0;
    color:#666;
}

.server-right-search {
    height:62rpx;
    border:1rpx solid #f2f3f6;
    line-height: 62rpx;
    margin-bottom:20rpx;
    border-radius:6rpx;
    display: flex;
    position: relative;
}

.server-right-search-icon {
    position: absolute;
    top:20rpx;
    left:12rpx;
    width:20rpx;
    height:20rpx;
    vertical-align: middle;
}

.server-right-search-input {
    flex:1;
    font-size: 12px;
    padding-left:46rpx;
    vertical-align: middle;
}

.server-right-search-btn {
    width:120rpx;
    line-height: 60rpx;
    text-align: center;
    border-radius: 0 6rpx 6rpx 0;
    background:#f7f7f7;
    font-size: 12px;
}

.server-right-client {
    height:620rpx;
    position: relative;
}

.server-right-client-name {
    height:72rpx;
    line-height: 72rpx;
    display: flex;
}

.server-right-client-name-text {
    flex:1;
    font-size: 13px;
}

.server-right-client-pic {
    position: absolute;
    top:40%;
    left:50%;
    transform:translate(-50%,-50%);
    width:420rpx;
    height:310rpx;
}
/* 排序下拉 */
.sort {
    background:#fff;
    animation: slideDown 0.2s linear; 
}


.sort-item {
    height:80rpx;
    line-height: 80rpx;
    padding-left: 30rpx;
}

.activeSort {
    color:#666;
}

.sort-item-name {
    font-size: 14px;
    
}

/* 筛选下拉 */
.info {
    width:90%;
    height:100%;
    background:#fff;
    animation:slideLeft 0.2s linear;
    position: absolute;
    top:0;
    right:0;    
}



.info-top {
    color:#666;
    padding:20rpx 40rpx;
    font-size: 12px;
    height:calc(100% - 140rpx);
}

.info-top-tip {
    margin-bottom:24rpx;
}

.info-top-title {
    font-size: 15px;
    height:40rpx;
    line-height: 40rpx;
}   

.info-top-content {
    margin:24rpx 24rpx 0 0;
    display: flex;
    flex-wrap: wrap;
}

.info-top-content-items {
    width:33.33%;
    text-align: center;
    margin-bottom:24rpx;
    display: flex;
}

.info-top-content-items-text {
    width:160rpx;
    height:60rpx;
    line-height: 60rpx;
    border:1rpx solid #666;
    border-radius: 6rpx;
}

.active-info {
    border-color:#F74B3D;
    color:#F74B3D;
}

.info-top-content-search {
    height:.3rem;
    line-height: .3rem;
    background:#f2f3f6;
    width:91%;
    border-radius: 4rpx;
}

.info-top-content-search::after {
    border:none;
}

.info-bottom {
    position: absolute;
    bottom:0;
    left:0;
    width:100%;
    height:90rpx;
    line-height: 90rpx;
    display: flex;
    border-top:1rpx solid #f2f3f6;
}

.info-bottom-button {
    flex:1;
    font-size: 14px;
    text-align: center;
}

.info-bottom-button:nth-of-type(1) {
    background:#fff;
    color:#333;
    
}

.info-bottom-button:nth-of-type(2) {
    background: #F74B3D;
    color:#fff;

}

/* 商品列表 */
.list {
    background:#f5f5f5; 
    position: relative;
}

/* 商品列表为空处理 */
.list-blank {
    text-align: center;
    position: absolute;
    top:calc(50% - 80rpx);
    left:50%;
    transform:translate(-50%,-50%);
}

.list-blank-img {
    width:176rpx;
    height:228rpx; 
}

.list-blank-text {
    height:40rpx;
    line-height: 40rpx;
    color:#999;
    font-size: 14px;
}