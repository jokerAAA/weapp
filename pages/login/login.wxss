/* pages/login/login.wxss */
.login-controller {
    position: absolute;
    width:100%;
    height:100%;
    top:0;
    left:0;
}

.logo {
    height:240rpx;
    text-align: center;
    padding-top:52rpx;
}

.logo-img {
    width:120rpx;
    height:136rpx;

}

.info {
    padding:0 60rpx;
}

.info-item {
    border-bottom:4rpx solid #f2f2f2;
    position: relative;
    height:100rpx; 
    padding-top:30rpx;
}

.info-item-input {
    display: flex;
    align-items: center;
    font-size: 14px;
    color:#333;
    height:40rpx;
    line-height: 40rpx;
    width:60%;
}

.info-item-input::-webkit-input-placeholder {
    color:#999;
    font-size: 14px;
}

.info-item-input::after {
    border:none;
}

.info-item-btn {
    position: absolute;
    right:0;
    top:26rpx;
    width:134rpx;
    height:46rpx;
    line-height: 46rpx;
    border:1rpx solid #999;
    border-radius: 6rpx;
    color:#999;
    font-size: 10px;
    text-align: center;
}

.activeCode {
    color:#333;
    border:1rpx solid #333;
}

.btn {
    width:700rpx;
    height:88rpx;
    line-height: 88rpx;
    border-radius: 10rpx;
    background:rgba(255,52,52,0.50);
    color:#fff;
    text-align: center;
    margin:60rpx auto;
}

.activeLogin {
    background:#FF3434;
}