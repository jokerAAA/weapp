.head-view{
  height: 88rpx;
  background: #fff;
}
.gosearch{
  display: flex;
  align-items: center;
}
.search-content{
  background:#f5f5f5;
  width:638rpx;
  display:flex;
  flex-direction:row;
  align-items:center;
  padding-top:auto;
  padding-left:20rpx;
  padding-bottom:auto;
  margin-left:3.2%;
  height:60rpx;
  border-radius:100px;
}

.search-icon{
  width:40rpx;
  height:40rpx;
  margin-right:20rpx;
}

.search-input{
  width: 500rpx;
  font-size: 28rpx;
}
.p-center{
  display:flex;
  align-items:center;
  background: #fff;
  margin-left: 3.2%;
}
.user-icon{
  width: 40rpx;
  height: 44rpx;
  margin-top:12rpx;

}
.swiper_box{
  height: 220rpx;
}
.swiper-container{
  position: relative;
  height: 220rpx;
}
.slide-image{
  width: 100%;
  height: 220rpx;
}

.swiper-container .dots{  
  position: absolute;  
  left: 0;  
  right: 0;  
  bottom: 20rpx;  
  display: flex;  
  justify-content: center;  
}  
.swiper-container .dots .dot{  
  margin: 0 8rpx;  
  width: 14rpx;  
  height: 14rpx;  
  background: #fff;  
  border-radius: 50%;  
  transition: all .6s;  
  opacity: .5;
}  
.swiper-container .dots .dot.active{  
  width: 14rpx;  
  opacity: 1;
}

.swiper-tab{
    width: 100%;
    border-bottom: 1rpx solid #eee;
    text-align: center;
    height: 88rpx;
    line-height: 88rpx;
    margin-top: 1.2%;
    background: #fff;
}
.swiper-tab-item{
    display: inline-block;
    width: 50%;
    font-size: 15px;
    position: relative;
}
.active-tab{
    border-bottom: 4rpx solid #ff4800;
    position: absolute;
    bottom: 1px;
    width: 40%;
    left: 0;
    right: 0;
    margin: 0 auto;
}
.active-tab-col{
    color:#ff4800;
}
