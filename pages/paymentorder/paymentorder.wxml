<!-- 支付订单 -->
<view class="pay-container">

    <view class="money">
        <view class="flex money-item">
            <view class="flex-left">需支付</view>
            <view class="flex-right red">￥{{price}}</view>
        </view>
    </view>

    <view class="info">
        <view class="flex info-item">
            <view class="flex-left">订单号</view>
            <view class="flex-right">{{tradelogid}}</view>
        </view>
        <view class="flex info-item">
            <view class="flex-left">购买商品</view>
            <view class="flex-right">{{tradename}}</view>
        </view>
        <view class="flex info-item">
            <view class="flex-left">下单时间</view>
            <view class="flex-right">{{addtime}}</view>
        </view>
    </view>

    <view class="btn" bindtap="pay">微信支付</view>
</view>