/**index.wxss**/

/* header */

.head-view {
	height: 88rpx;
	background: #fff;
}

.gosearch {
	display: flex;
	align-items: center;
}

.search-content {
	background: #f5f5f5;
	width: 638rpx;
	display: flex;
	flex-direction: row;
	align-items: center;
	padding-top: auto;
	padding-left: 20rpx;
	padding-bottom: auto;
	margin-left: 3.2%;
	height: 60rpx;
	border-radius: 100px;
}

.search-icon {
	width: 40rpx;
	height: 40rpx;
	margin-right: 20rpx;
}

.search-input {
	width: 500rpx;
	font-size: 28rpx;
}

.p-center {
	display: flex;
	align-items: center;
	background: #fff;
	margin-left: 3.2%;
}

.user-icon {
	width: 40rpx;
	height: 44rpx;
	margin-top: 12rpx;
}

/* 导航栏 */

.nav {
	display: flex;
	flex-wrap: wrap;
	padding:10rpx 24rpx;
	background:#fff;
	margin-bottom: 20rpx;
}

.nav-item {
	width: 25%;
	padding:20rpx 0 ;
	text-align: center;
}

.nav-item-img {
	height:88rpx;
	width:88rpx;
	border-radius: 50%;
	margin-bottom: 12rpx;
	
}

.nav-item-text {
	line-height: 34rpx;
	color:#333;
	font-size: 12px;
}

/* 轮播图 */

.swiper_box {
	height: 250rpx;
}

.swiper-container {
	position: relative;
	height: 250rpx;
}

.slide-image {
	width: 100%;
	height: 250rpx;
}

.swiper-container .dots {
	position: absolute;
	left: 0;
	right: 0;
	bottom: 20rpx;
	display: flex;
	justify-content: center;
}

.swiper-container .dots .dot {
	margin: 0 8rpx;
	width: 14rpx;
	height: 14rpx;
	background: #fff;
	border-radius: 50%;
	transition: all .6s;
	opacity: .5;
}

.swiper-container .dots .dot.active {
	width: 14rpx;
	opacity: 1;
}

/* tab栏 */

.swiper-tab {
	width: 100%;
	border-bottom: 1rpx solid #eee;
	text-align: center;
	height: 88rpx;
	line-height: 88rpx;
	margin-top: 1.2%;
	background: #fff;
}

.swiper-tab-item {
	display: inline-block;
	width: 50%;
	font-size: 15px;
	position: relative;
  color: #999;
}

.active-tab {
	border-bottom: 4rpx solid #FF3434;
	position: absolute;
	bottom: 1px;
	width: 40%;
	left: 0;
	right: 0;
	margin: 0 auto;
}

.active-tab-col {
	color: #FF3434 ;
}

