/* pages/common/checkbox/checkbox.wxss */

.newcheckbox{
	/* display: none; */
	position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 100;
}
.checkbox-choose{
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
    background: #fff;
    z-index: 1000;
    /* display: none; */
}
.choose-header{
	border-bottom: 1px solid #f1f1f1;
	height: 44px;
}
.header-cancle{
	width: 10%;
	font-size: 16px;
	color: #999999;
	float: left;
	margin-left: 3%;
}
.header-title{
	font-size: 18px;
	color: #333333;
	text-align: center;
	float: left;
	width: 100%;
}
.header-sure{
	width: 10%;
	font-size: 16px;
	color: #FF3434;
	text-align: right;
	float: left;
}
.checkbox-list{
	overflow-y: scroll;
	max-height: 300px;
	width: 100%;
	z-index: 100000;
}
.checkbox-list>.checkbox-click{
	line-height: 50px;
	border-bottom: 1px solid #f1f1f1;
	position: relative;
	padding-left: 12px;
}
.list-one{
	float: left;
	font-size: 15px;
	color: #333333;
	margin-left: 12px;
}
.list-choose{
	float: right;
}
.list-choose{
	width: 20px;
	height: 20px;
	display: inline-block;
	position: absolute;	
	top: 15px;
  right: 12px;
  z-index: 1000;
}
.list-choose.active{
}
.checkbox-list .new-checkbox{
	border: 0;
	float: left;
	font-size: 15px;
	color: #333333;
	background: transparent;
	padding: 0;
	font-weight: 400;
	width: 100%;
    text-align: left;
    height: 49px;
    line-height: 50px;
    position: relative;
    border-bottom: 1px solid #f1f1f1;
}
.checkbox-input{
	display: none;
}
.checkbox-list .ui-checkbox{
	margin: 0;
	width: 100%;
	height: 50px;
}
.checkbox-list .ui-checkbox-on{
	background: transparent !important;
	color: #333 !important;
}
.checkbox-mask{
	opacity: 0.4;
	background: #000000;
	position: fixed;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	z-index: 10;
}
.clearfix:after{
	content: ".";
	display: block;
	clear: both;
	height: 0;
	overflow: hidden;
}
.checkbox-click{
	height: 50px;
}
.modal-open {
    overflow: hidden;
    height: 100%;
}
.choose-sell-type{
	position: absolute;
	right: 40px;
}

.radio-group{
    font-size: 35rpx;
    display: flex;
    flex-direction: column;
  }
  .select{
    width: 100rpx;
    height: 50rpx;
 
  }
  .checkbox{
    height: 100rpx;
  }

